{
  "name": "@oceanprotocol/list-purgatory",
  "version": "1.0.5",
  "description": "Ocean Protocol's Purgatory list.",
  "main": "dist/index.js",
  "umd:main": "dist/index.umd.js",
  "module": "dist/index.esm.js",
  "esmodule": "dist/index.modern.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "release": "release-it --non-interactive",
    "changelog": "auto-changelog -p",
    "build": "rm -rf dist && microbundle build --no-compress ",
    "prettier": "prettier --ignore-path .gitignore './**/*.{css,yml,js,ts,tsx,json}'",
    "lint": "npm run prettier -- --check",
    "format": "npm run prettier -- --write",
    "test": "npm run lint"
  },
  "files": [
    "dist/",
    "list-assets.json",
    "list-accounts.json",
    "README.md"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/oceanprotocol/list-purgatory.git"
  },
  "author": "",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/oceanprotocol/list-purgatory/issues"
  },
  "homepage": "https://github.com/oceanprotocol/list-purgatory#readme",
  "release-it": {
    "hooks": {
      "after:bump": "npm run changelog"
    },
    "plugins": {
      "@release-it/bumper": {
        "out": [
          "package.json",
          "package-lock.json"
        ]
      }
    },
    "git": {
      "tagName": "v${version}"
    },
    "github": {
      "release": true
    },
    "npm": {
      "publish": false
    }
  },
  "devDependencies": {
    "@release-it/bumper": "^2.0.0",
    "microbundle": "^0.12.4",
    "auto-changelog": "^2.2.1",
    "prettier": "^2.1.2",
    "release-it": "^14.2.1"
  }
}
